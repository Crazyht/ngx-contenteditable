{
    "typescript.tsdk": "./node_modules/typescript/lib",
    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/CVS": true,
        "**/.DS_Store": true,
        "**/*.js.map": true,
        "**/*.css.map": true,
        "**/*.js": { "when": "$(basename).ts" },
        "**/*.css": { "when": "$(basename).scss" },
        "npm-debug.log": true,
        "package-lock.json": true,
        "out-tsc": true
    },
    "editor.renderWhitespace": "boundary",
    "editor.formatOnPaste": false,
    "editor.minimap.enabled": false
}